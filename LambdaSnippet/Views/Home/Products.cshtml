@model LambdaSnippet.ViewModels.ProductsVM

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

@foreach (var product in Model.Products)
{
    <div>
        <label>Name</label>
        <span>@product.Name</span>

        <label>Price</label>
        <span>@product.Price</span>
    </div>
}
<ul>
@for (int i = 0; i < Model.Pages; i++)
{
    <li>
        <a href="?pageNumber=@i">@(i + 1)</a>
    </li>
}
</ul>

